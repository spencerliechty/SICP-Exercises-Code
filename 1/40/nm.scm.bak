(define (deriv g)
	(lambda (x)
		(/ (- (g (+ x dx)) (g x))
		   dx)))
(define dx 0.00001)
(define (newton-transform g)
	(lambda (x)
		(- x (/ (g x) ((deriv g) x)))))
(define (newtons-method g guess)
	(fixed-point (newton-transform g) guess))
(define (cubic a b c)
	(lambda (x) (- x 
				   (/ (+ (* x x x) (* a x x) (* b x) c)
				      (+ (* 3 x x) (* 2 a x) b)))))
(newtons-method (cubic 1 3 6) 1)
